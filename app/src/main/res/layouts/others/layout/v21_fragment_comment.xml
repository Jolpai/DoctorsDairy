<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_monthly_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@color/white">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/editPersonNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:background="@color/blue_500">
            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Person's Name"
                android:textColor="@color/white"
                android:gravity="left" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/editCommentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editPersonNameLayout"
            android:background="@color/blue_500">
            <EditText
                android:id="@+id/editComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comment"
                android:textColor="@color/white"
                android:gravity="left" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewCommenters"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/editCommentLayout"
            android:background="@color/blue_200">

        </android.support.v7.widget.RecyclerView>





</RelativeLayout>
