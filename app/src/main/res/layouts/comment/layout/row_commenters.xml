<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    android:padding="16dp"
    android:textColor="@color/green_200">
   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_500">

    </View>-->
    <TextView
        android:id="@+id/textCommentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20 January 2017"
        android:textColor="@color/green_700"/>

    <TextView
        android:id="@+id/textComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/textCommentDate"
        android:text="Report looks great. need some improvement on bla bla bla.."
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textCommentersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textComment"
        android:layout_alignParentRight="false"
        android:text="Tanim Reja"
        android:textColor="@color/green_hangout"/>

</RelativeLayout>
