<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    android:padding="10dp"
    android:background="@color/green_200">
   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_500">

    </View>-->
    <TextView
        android:id="@+id/textPlanDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20 January 2017"
        android:textColor="@color/green_700"/>

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPlanDate"
        android:layout_alignParentLeft="true"
        android:text="Name: "
        android:textColor="@color/black_500"/>

    <TextView
        android:id="@+id/textType"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPlanDate"
        android:layout_alignParentRight="true"
        android:text="Type: "
        android:textColor="@color/black_500"/>


    <TextView
        android:id="@+id/lblContactDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textName"
        android:layout_alignParentRight="false"
        android:text="Contact Date:"
        android:textColor="@color/black_500"/>

    <TextView
        android:id="@+id/textContactDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textName"
        android:layout_alignParentRight="false"
        android:layout_toRightOf="@+id/lblContactDate"
        android:text="20 January 2017"
        android:paddingLeft="5dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/lblIntentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textContactDate"
        android:layout_alignParentRight="false"
        android:text="Intent Date:"
        android:textColor="@color/black_500"/>

    <TextView
        android:id="@+id/textIntentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textContactDate"
        android:layout_alignParentRight="false"
        android:layout_toRightOf="@+id/lblIntentDate"
        android:text="20 January 2017"
        android:paddingLeft="5dp"
        android:textColor="@color/white"/>

</RelativeLayout>
