<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jolpai.doctorsdairy">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity android:name=".activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DailyReport"
            android:fitsSystemWindows="true"
            android:theme="@style/HomeTheme" />
        <activity android:name=".activity.ReportAddEditComment" />
        <activity android:name=".activity.MonthSelection" />
        <activity android:name=".activity.MonthlyPlan"></activity>
    </application>

</manifest>